@model List<LTIS.Models.ContactViewModel>
@{
    ViewBag.Title = "Contacts";
}

<h3>Contact Integration</h3>
<p class="success">@ViewBag.Message</p> 
@using (Html.BeginForm())
{
<table class="table-display">
    <thead>
        <tr>
            <th colspan="4">&nbsp;</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Organization</th>
            <th>Email Address</th>
            <th>Phone</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Create Date</th>
        </tr>
    </thead>
    <tbody>
        @for(int index = 0; index < Model.Count; index++ )
        {
            <tr>
                @foreach (var opt in Model[index].options)
                {
                    bool optChecked = opt.Key == 1;
                    string optId = Model[index].ContactID.ToString() + "-" + opt.Key;
                    object attributes;
                    if ((opt.Key == 1 && !Model[index].DuplicateInd) || opt.Key == 2 && Model[index].DuplicateInd)
                    {
                        attributes = new { id = optId, Checked = "checked" };
                    }
                    else
                    {
                        attributes = new { id = optId };
                    }
                        
                    <td class="table-radio">
                        @if(opt.Key != 2 || Model[index].DuplicateInd)
                        {
                            @Html.RadioButtonFor(m => m[index].SelectedOption, opt.Key, attributes)<label for="@optId" class="radio-margin">@opt.Value</label> 
                        }
                    </td>
                }

                <td>
                    @Html.HiddenFor(m => m[index].ContactID)
                    @Model[index].FirstName
                </td>
                <td>@Model[index].LastName</td>
                <td>@Model[index].Organization</td>
                <td>@Model[index].EmailAddress</td>
                <td>@Model[index].Phone</td>
                <td>@Model[index].StreetAddress</td>
                <td>@Model[index].City</td>
                <td>@Model[index].State</td>
                <td>@Model[index].Zip</td>
                <td>@Model[index].CreateDate</td>
            </tr>
        }
    </tbody>
</table>
    <br />
    <input type="submit" value="Update ACT" />
}

